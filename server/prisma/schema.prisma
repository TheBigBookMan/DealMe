generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ? then use npx prisma db push- for updating the database
// ? Use npx prisma generate- for up to date with client

model Businesses {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String 
    location String
    notificationDay String?
    notificationTime String?
    contactNumber String?
    openTime String?
    closeTime String?
    deals Deal[]
    events Event[]
}


// ???!!! DateTime type needs to be adjusted, using string for dev
// * new model for deal
model Deal {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    date String
    description String?
    price Float
    startTime String
    endTime String
    business Businesses @relation(fields: [businessId], references: [id])
    businessId String @db.ObjectId
}

// * Model for event
model Event {
    id String @id @default(auto()) @map ("_id") @db.ObjectId
    title String
    date String
    description String?
    price Float
    startTime String
    endTime String
    location String
    capacity Int
    business Businesses @relation(fields: [businessId], references: [id])
    businessId String @db.ObjectId
}

