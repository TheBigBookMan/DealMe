generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ? then use npx prisma db push- for updating the database
// ? Use npx prisma generate- for up to date with client

model Businesses {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String 
    location String
    
}

